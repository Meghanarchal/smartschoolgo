# SmartSchoolGo Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=SmartSchoolGo
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/smartschoolgo
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# API Keys (obtain from respective services)
ACT_GOV_API_KEY=your_act_gov_api_key
ACT_GOV_CLIENT_ID=your_client_id
ACT_GOV_CLIENT_SECRET=your_client_secret

OPENWEATHER_API_KEY=your_openweather_api_key
MAPBOX_API_KEY=your_mapbox_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Email Configuration (optional for local testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@smartschoolgo.com

# Geographic Bounds (ACT Region)
MIN_LATITUDE=-35.9285
MAX_LATITUDE=-35.1247
MIN_LONGITUDE=148.7633
MAX_LONGITUDE=149.3995

# Monitoring (optional for local)
PROMETHEUS_ENABLED=False
JAEGER_ENABLED=False
SENTRY_DSN=

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100/hour

# Feature Flags
ENABLE_ML_MODELS=True
ENABLE_REALTIME_TRACKING=True
ENABLE_NOTIFICATIONS=True